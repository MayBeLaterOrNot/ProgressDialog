<Window x:Class="ProgressDialog.ProgressDialogWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        x:Name="ProgressDialogWin"
             xmlns:local="clr-namespace:ProgressDialog"
             mc:Ignorable="d" 
        Width="300"
        MinWidth="100"
        Height="150">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="{Binding Message, Mode=OneWay}" Grid.Row="0"/>
        <Grid Grid.Row="1">
            <ProgressBar Value="{Binding ProgressPercent, Mode=OneWay}"/>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding ProgressPercent, StringFormat={}{0}%}"/>
        </Grid>
        <Button Content="Cancel" Command="{Binding CancelCommand}" Grid.Row="2"/>
    </Grid>
</Window>
